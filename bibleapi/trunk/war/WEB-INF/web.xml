<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<filter>
		<filter-name>PersistenceManagerFilter</filter-name>
		<filter-class>bibleapi.tools.PersistenceManagerFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PersistenceManagerFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>Bibleeapi</servlet-name>
		<servlet-class>bibleapi.BibleeapiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiAdd</servlet-name>
		<servlet-class>bibleapi.BibleeapiAddServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiSearch</servlet-name>
		<servlet-class>bibleapi.BibleeapiSearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiImport</servlet-name>
		<servlet-class>bibleapi.importbible.BibleeapiImportServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiImportBible</servlet-name>
		<servlet-class>bibleapi.importbible.BibleeapiImportBibleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BibleeapiAdd</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BibleeapiSearch</servlet-name>
		<url-pattern>/s</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BibleeapiImport</servlet-name>
		<url-pattern>/import</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>BibleeapiImportBible</servlet-name>
		<url-pattern>/importBible</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Bibleeapi</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
