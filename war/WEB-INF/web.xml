<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Bibleeapi</servlet-name>
		<servlet-class>bibleapi.BibleeapiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiSearch</servlet-name>
		<servlet-class>bibleapi.BibleeapiSearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiImport</servlet-name>
		<servlet-class>bibleapi.importbible.BibleeapiImportServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiDelete</servlet-name>
		<servlet-class>bibleapi.importbible.BibleeapiDeleteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BibleeapiImportBible</servlet-name>
		<servlet-class>bibleapi.importbible.BibleeapiImportBibleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BibleeapiSearch</servlet-name>
		<url-pattern>/s</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BibleeapiImport</servlet-name>
		<url-pattern>/admin/import</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>BibleeapiImportBible</servlet-name>
		<url-pattern>/admin/importBible</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BibleeapiDelete</servlet-name>
		<url-pattern>/admin/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Bibleeapi</servlet-name>
		<url-pattern>/r</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Bibleeapi</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<security-constraint>
        <web-resource-collection>
        	<web-resource-name>admin</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
